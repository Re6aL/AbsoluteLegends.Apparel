 <!-- +++++ Shapka Pidorka +++++ -->
<ThingDef ParentName="HatMakeableBase">
		<defName>AL_Pidorka</defName>
		<label>Pidorka</label>
		<description>...placeholder...</description>
		<graphicData>
			<texPath>Things/Headgear/Pidorka/Pidorka</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.25</generateCommonality>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2000</WorkToMake>
			<Mass>0.1</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat> <!-- hot -->
            <EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<CookSpeed>0.10</CookSpeed>
			<FoodPoisonChance>-0.2</FoodPoisonChance>
			<ButcheryFleshEfficiency>0.05</ButcheryFleshEfficiency>
		</equippedStatOffsets>
    <thingCategories Inherit='False'>
      <li>Headgear</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Headgear/Pidorka/Pidorka</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>IndustrialBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>AL_Apparel</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
    </ThingDef>

